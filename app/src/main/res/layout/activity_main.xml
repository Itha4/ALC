<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="31dp"
        android:text="Welcome to ALC 4.0"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textColor="#000"
        android:textStyle="bold" />


    <Button
        android:id="@+id/btn_main_aboutalc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="136dp"
        android:layout_marginLeft="136dp"
        android:layout_marginTop="169dp"
        android:background="#f5a429"
        android:padding="14dp"
        android:text="About ALC"

        android:textSize="20dp"

        android:textStyle="bold"/>

    <Button
        android:id="@+id/btn_main_profile"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn_main_aboutalc"
        android:layout_alignRight="@+id/btn_main_aboutalc"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-23dp"
        android:layout_marginRight="-23dp"
        android:layout_marginBottom="210dp"
        android:background="#f5a429"
        android:text="My profile"
        android:textSize="20dp"
        android:textStyle="bold" />


</RelativeLayout>